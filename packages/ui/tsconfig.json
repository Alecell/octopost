{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "node",
    "types": ["vitest/globals"],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", ".ladle"],
  "exclude": ["node_modules", "dist", "coverage"]
}
